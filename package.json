{
  "name": "logreader",
  "type": "module",
  "scripts": {
    "build": "vite --mode production build",
    "dev": "vite --mode development build",
    "dev:watch": "vite --mode development build --watch",
    "lint": "eslint src *.ts",
    "lint:fix": "eslint --fix src *.ts",
    "test": "TZ='Etc/GMT+1' vitest run",
    "test:watch": "TZ='Etc/GMT+1' vitest watch",
    "test:coverage": "TZ='Etc/GMT+1' vitest run --coverage"
  },
  "devDependencies": {
    "@nextcloud/browserslist-config": "^3.0.1",
    "@nextcloud/eslint-config": "^8.4.1",
    "@nextcloud/vite-config": "^1.5.0",
    "@pinia/testing": "^0.1.7",
    "@vitest/coverage-istanbul": "^3.0.2",
    "@vue/test-utils": "^1.3.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "happy-dom": "^16.6.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vitest": "^3.0.2"
  },
  "engines": {
    "node": "^20.0.0",
    "npm": "^10.0.0"
  },
  "dependencies": {
    "@highlightjs/vue-plugin": "^1.0.2",
    "@mdi/svg": "^7.4.47",
    "@nextcloud/axios": "^2.5.0",
    "@nextcloud/dialogs": "^6.0.1",
    "@nextcloud/initial-state": "^2.2.0",
    "@nextcloud/l10n": "^3.1.0",
    "@nextcloud/logger": "^3.0.2",
    "@nextcloud/router": "^3.0.0",
    "@nextcloud/typings": "^1.9.1",
    "@nextcloud/vue": "^8.22.0",
    "date-fns": "^3.6.0",
    "highlight.js": "^11.11.1",
    "json-string-splitter": "^1.0.0",
    "pinia": "^2.3.0",
    "vue": "^2.7.15",
    "vue-material-design-icons": "^5.3.1"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/",
      "js/",
      "lib/"
    ],
    "extends": [
      "@nextcloud/eslint-config/typescript"
    ],
    "plugins": [
      "chai-friendly"
    ],
    "rules": {
      "func-call-spacing": "off",
      "@typescript-eslint/func-call-spacing": "error",
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    },
    "overrides": [
      {
        "files": [
          "./*.config.*",
          "**/*.spec.*",
          "**/*.test.*"
        ],
        "rules": {
          "n/no-unpublished-import": [
            "off"
          ]
        }
      },
      {
        "files": [
          "**/*.vue"
        ],
        "rules": {
          "n/no-missing-import": "off"
        }
      }
    ]
  },
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "version": "4.0.0"
}
